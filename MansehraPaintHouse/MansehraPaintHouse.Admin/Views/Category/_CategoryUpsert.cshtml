@model MansehraPaintHouse.Core.Entities.Category

<form id="categoryForm" asp-action="CategoryUpsert" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CategoryID" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryID" class="control-label"></label>
        <select asp-for="ParentCategoryID" class="form-control" asp-items="@(new SelectList(ViewBag.ParentCategories, "CategoryID", "Name"))">
            <option value="">Select Parent Category</option>
        </select>
        <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image1" class="control-label"></label>
        <input asp-for="Image1" type="file" class="form-control" name="Image1File" />
        <span asp-validation-for="Image1" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.Image1))
        {
            <img src="@Model.Image1" alt="Image 1" style="max-width: 200px;" />
        }
    </div>
    <div class="form-group">
        <label asp-for="Image2" class="control-label"></label>
        <input asp-for="Image2" type="file" class="form-control" name="Image2File" />
        <span asp-validation-for="Image2" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.Image2))
        {
            <img src="@Model.Image2" alt="Image 2" style="max-width: 200px;" />
        }
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-link link-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary ms-auto">Save</button>
    </div>
</form>
