@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <p>
                        Your password has been reset. Please <a asp-action="Login">click here to log in</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 